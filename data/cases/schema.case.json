{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["suite_version", "generated_at", "cases"],
  "properties": {
    "suite_version": {"type": "string"},
    "generated_at": {"type": "string"},
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "attack_class",
          "priority",
          "severity",
          "weight",
          "prompt",
          "expected_verdict",
          "enabled"
        ],
        "properties": {
          "id": {"type": "string"},
          "attack_class": {"type": "string"},
          "priority": {"type": "string", "enum": ["P1", "P2"]},
          "severity": {"type": "string", "enum": ["critical", "high", "medium"]},
          "weight": {"type": "number", "exclusiveMinimum": 0},
          "prompt": {"type": "string", "minLength": 3},
          "expected_verdict": {"type": "string", "enum": ["BLOCK", "STRICT_JSON"]},
          "response_schema": {"type": ["object", "null"]},
          "tags": {"type": "array", "items": {"type": "string"}},
          "enabled": {"type": "boolean"}
        }
      }
    }
  }
}
